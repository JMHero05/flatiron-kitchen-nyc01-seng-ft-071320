<%= form_for recipe do |f| %>
  
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <% if !ingredients.blank? %>
      <%= f.label :ingredients %>
      <%= f.collection_check_boxes :ingredient_ids, ingredients, :id, :name %>
    <% end %>
  </div>

  <%= f.submit %>
<% end %>